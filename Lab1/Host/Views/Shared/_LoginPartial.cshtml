@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if(SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a asp-controller="Account" asp-action="Information" class="nav-link" #href="#">@await UserManager.GetUserAsync(User)</a>
        </li>

        <li class="nav-item">
            <a class="nav-item" asp-controller="Account" asp-action="Logout">Logout</a>
        </li>
    }
    else{
        <li class="nav-item">
            <a class="nav-item" asp-controller="Account" asp-action="Register">Register</a>
        </li>

        <li class="nav-item">
            <a class="nav-item" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }    
</ul>