@using Application.Contracts.Dtos
@using Application.Contracts.Dtos.Product
@using Application.Contracts.Services
@using Domain.Services
@model Paging<ProductDto, RequestGetListFilterProductDto>
@inject IHelperService _iHelperService
@inject IProductService _iProductService

@{
    Layout = "_LayoutManager";
}
<a asp-action="Create" class="btn btn-success">Create</a>
<table class="table">
    <thead>
        <tr>
            @foreach (var item in _iHelperService.GetListNameFieldAsync<ProductDto>())
            {
                if (item != "Id")
                {
                    <th>@item</th>
                }
            }
        </tr>
    </thead>
    <tbody>
        @if(Model?.Items != null)
        {
            foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Status</td>
                    <td><img src="@item.UrlImg" width="50px" height="35px" /></td>
                    <td>
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-success">Edit</a> |
                        <form asp-action="Delete" method="post">
                            <input hidden asp-for="@item.Id"/>
                            <input value="Delete" type="submit" class="btn btn-success" /> |
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>