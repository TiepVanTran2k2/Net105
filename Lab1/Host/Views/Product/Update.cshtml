@using Application.Contracts.Dtos.Product
@model RequestUpdateProductDto

@{
    Layout = "_LayoutManager";
}
<h2>Edit</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UrlImg"/>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger">Please input name</span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input type="number" asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-select">
                    <option value="" selected>Choose Status</option>
                    <option value=0>Open</option>
                    <option value=1>Close</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-select">
                    <option value="" selected>Choose Gender</option>
                    <option value=0>Japan</option>
                    <option value=1>Vietnamese</option>
                    <option value=2>Euroes</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="GetFile" class="control-label"></label>
                <input asp-for="GetFile" class="form-control" id="file" accept="image/jpeg, image/png, image/jpg">
                <span asp-validation-for="GetFile" class="text-danger"></span>
                <img id="image" src="@Model.UrlImg" width="100px" height="100px">
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script>
    const file = document.querySelector("#file")
    file.addEventListener("change", function () {
        const reader = new FileReader()
        reader.addEventListener("load", () => {
            document.querySelector("#image").src = reader.result
        })
        reader.readAsDataURL(this.files[0]);
    })
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }